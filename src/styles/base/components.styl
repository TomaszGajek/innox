.container
  max-width 1000px
  margin 0 auto
  @media (max-width:999px)
    margin-left 15px
    margin-right 15px

.row
  display flex

.row--margin
  margin-top 200px
  margin-bottom 200px
.row--wrap
  flex-wrap wrap

.active
  padding-bottom 5px
  border-bottom 3px solid hover-color

.button
  margin 0 auto
  background white
  padding 15px 10px
  width 150px
  font-size 1.4rem
  letter-spacing 1px
  color hover-color
  margin-bottom 15%
  text-transform uppercase
  text-align center

.button--grey
  background #adacab


.button--brown
  background #92715f


.line
  width 100%
  height 1px
  background hover-color
  margin auto

.line--right
  margin-right 20px

.line--left
  margin-left 20px
.lead
  margin auto
  font-size 2.5rem
  color hover-color
  text-transform uppercase
  letter-spacing 2px
  font-weight: bold
  padding 10px 70px
  border 1px solid hover-color

/*thumbnail filter */
.all
  display block
