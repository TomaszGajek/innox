
.services
  .row--wrap
    justify-content space-between

.services__box
  border 1px solid hover-color
  padding 60px 60px 30px
  flex-basis 200px
  margin-bottom 20px
  color #757371
  h4
    text-transform uppercase
    margin 20px auto 40px
    text-align center
    font-family primary-font
    font-size 1.4rem
    letter-spacing 1.4px
  p
    text-align center
    font-family secondary-font
    font-size 1.3rem
.services__box__items
  display flex
  justify-content center

  span
    background hover-color
    height 1px
    width 35px
    margin auto 10px
  div
    border-radius 50%
    height 60px
    width 60px
    border 3px solid hover-color
    img
      padding 10px 11px


.row--secondary-color
  background secondary-color
  //justify-content center
  margin-top 70px
  display flex
  justify-content center


.services__img

  padding-top 100px
  img
    display block
    width 100%
    height auto
    margin-bottom -12px
/*second owl carousel */

#owl-service

  padding-top 100px
  display flex
  flex-direction column
  width 400px
  .active
    border none

  h2
    color white
    text-transform uppercase
    font-size 1.9rem
    letter-spacing 1px
    font-weight 500
    margin-top 0
    margin-bottom 40px
  p
    font-size 1.3rem
    line-height 1.6
    color #e1cdb3
    text-align justify
    padding-right 10px

  a
    text-transform uppercase
    display block
    border 1px solid white
    width 150px
    padding 10px 15px
    text-align center
    font-size 1.4rem
    margin 50px 0
    transition all 0.5s
    &:hover
      background white
      color #97735e
      font-weight bold

  .owl-nav
    display flex
    color transparent
    .owl-prev
      background url(images/left_a_w.png)
      background-repeat no-repeat
      background-position 50%
      height 30px
      width 30px
    .owl-next
      background url(images/right_a_w.png)
      background-repeat no-repeat
      background-position 50%
      height 30px
      width 30px

@media (max-width: 999px)
  .services
    .row--wrap
      margin 0 auto
      max-width 700px
      justify-content space-around

  .row--secondary-color
    flex-direction column

  .services__img
    order 2
    padding-top 20px
    padding-left 50px
    padding-right 50px

  #owl-service
    margin-left 150px
    padding-top 30px

@media (max-width: 699px)
  #owl-service
    margin-left 90px

@media (max-width: 530px)
  .services__img
    padding-top 40px
  #owl-service
    margin-left 70px
    width 300px
    a
      margin-top 20px
      margin-bottom 20px

@media (max-width: 400px)
  .services__img
    padding-left 20px
    padding-right 20px
  #owl-service
    margin-left 40px
    width 250px
