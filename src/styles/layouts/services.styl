
.services
  .row--wrap
    justify-content space-between

.services__box
  border 1px solid hover-color
  padding 60px 60px 30px
  flex-basis 200px
  margin-bottom 20px
  color #757371
  h4
    text-transform uppercase
    margin 20px auto 40px
    text-align center
    font-family primary-font
    font-size 1.4rem
    letter-spacing 1.4px
  p
    text-align center
    font-family secondary-font
    font-size 1.3rem
.services__box__items
  display flex
  justify-content center

  span
    background hover-color
    height 1px
    width 35px
    margin auto 10px
  div
    border-radius 50%
    height 60px
    width 60px
    border 3px solid hover-color
    img
      padding 11px 15px

@media (max-width: 999px)
  .services
    .row--wrap
      margin 0 auto
      max-width 700px
      justify-content space-around
