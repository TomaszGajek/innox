
.works__list
  display flex
  justify-content center
  flex-wrap wrap
  width 600px
  margin 0 auto 50px


.works__list__item
  flex-basis 1
  padding-top 10px
  color #adacab
  text-transform none
  font-size 1.5rem
  font-weight bold
  transition color 0.5s
  text-align center
  padding  0 10px

  &:hover
    color hover-color
    cursor pointer
  &:last-child
    span
      color white

.works__list__item--active
  color hover-color

.works__thumbs
  flex-wrap wrap
  justify-content center
  margin-bottom 50px

.thumbnail

  position relative
  margin-right 15px
  margin-bottom 15px
  flex-basis 235px

  img
    display block
    height auto
    width 100%


.thumbnail__meta
  padding 10px
  margin 15px
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  background #54443b
  opacity 0
  transition all 0.5s
  h4
    text-transform uppercase
    color white
    font-size 1.4rem
    margin 70% 0 0
    letter-spacing 1px
    line-height 1.4
  p
    color #d6b7a6
    font-size 1.3rem
    margin 0
  &:hover
    opacity 0.8

.thumbnail__meta__link
  display flex
  width 70%
  margin 30% auto 0


  span
    display block
    height 1px
    background white
    width 10%
    margin auto
  a
    display block
    padding 8px 20px
    text-transform uppercase
    border 1px solid white
