header
  background-image url(images/header-img.jpg)
  background-size cover
  //background-position center
  @media (max-width: 960px)
    background-position 30% center

.header__text

  height 30%
  margin 45% 0 auto
  color header-font-color
  text-transform uppercase
  text-align center
  h1

    font-size 6.3rem
    font-weight 400
    letter-spacing 2px
    line-height 0.8
    margin-bottom 10%
    span
      font-size 4.5rem
      letter-spacing 1.6px
      font-weight bold
  .button
    padding 0
    font-weight bold
    a
      color #9c7660
      transition all 0.5s
      display block
      padding 15px 10px
      &:hover
        color white





@media (max-width: 700px)
  .header__text
    h1
      font-size 4.2rem
      span
        font-size 3rem

@media (max-width: 700px)
  .header__text
    h1
      font-size:3rem
      span
        font-size: 2.1rem
