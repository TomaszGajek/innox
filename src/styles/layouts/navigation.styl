nav
  width: 100%
  display flex
  padding-top 100px
  justify-content space-between



.nav__logo
  width 40%
.nav__list
  width 60%
  display flex
  justify-content space-around
  font-weight bold
  font-size 1.6rem
  letter-spacing 1.2px
  padding 8px 0

  a
    transition all 0.5s

  a:hover
    padding-bottom 5px
    border-bottom 3px solid hover-color
    color hover-color


@media (max-width: 1100px)
  .nav__list
    font-size 1.4rem
@media (max-width: 960px)
  .nav__list
    flex-direction column
    a
      line-height: 2
@media (max-width: 960px)
  nav
    padding-top 60px
